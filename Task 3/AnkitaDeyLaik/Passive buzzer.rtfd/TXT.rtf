int bpin =11;
int PotPin=A0;
int PotVal;
float bval;
void setup()
{
  pinMode(bpin, OUTPUT);
  pinMode(PotPin, INPUT);
}

void loop()
{
  PotVal = analogRead(PotPin);
  bval = (9940./1023.)*PotVal+60;
  digitalWrite(bpin, HIGH);
  delayMicroseconds(bval); 
  digitalWrite(bpin, LOW);
  delayMicroseconds(bval); 
}
  
