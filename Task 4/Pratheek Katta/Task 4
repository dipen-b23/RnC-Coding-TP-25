class Student:
    def __init__(self, name, marks):
        self.name = name
        self.marks = tuple(marks)
        
    def total(self):
        return sum(self.marks)

    def average(self):
        return sum(self.marks) / len(self.marks)

def create_students():
    students = []
    n1 = int(input("Enter number of students: "))
    n2 = int(input("Enter number of subjects: "))
    for i in range(n1):
       
        name=input(f"Enter the name of student {i+1}: ")
        mark=[]
        
        for j in range(n2):
            
            marks=int(input(f"Enter Marks of student in subject {j+1}: "))
            mark.append(marks)
            
        student = Student(name, mark)
        students.append(student)

    return students

def analyze_students(students):
    for s in students:
        print(f"{s.name}: Total = {s.total()}, Average = {s.average()}")
    
    all_totals = [s.total() for s in students]
    avg_all = sum(all_totals) / len(students)
    print("\nclass average:", avg_all)

    highest = students[0]
    lowest = students[0]
    for s in students:
        if s.total() > highest.total():
            highest = s
        if s.total() < lowest.total():
            lowest = s

    print("\nTop Scorer:")
    print(f"{highest.name}")

    print("\nLowest Scorer:")
    print(f"{lowest.name}") 

    s = students
    for i in range(len(s)):
        for j in range(i + 1, len(s)):
            if s[i].total() < s[j].total():
                s[i], s[j] = s[j], s[i]


def main_function():
    stud = create_students()
    analyze_students(stud)

main_function()
